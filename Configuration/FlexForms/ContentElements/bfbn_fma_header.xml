<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>FMA</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
					<fach>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>Fach</label>
                          <config>
							<type>select</type>
                            <renderType>selectSingle</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>tx_bfbn_domain_model_fach</foreign_table>
                            <maxitems>1</maxitems>
                            <size>10</size> 
                          </config>
                        </TCEforms>
                    </fach>
					<kontakt>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>Seite - Kontakt</label>
                          <config>
							<type>select</type>
                            <renderType>selectTree</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>pages</foreign_table>
                            <foreign_table_where>AND pages.pid IN(0,1) ORDER BY pages.sorting</foreign_table_where>
                            <maxitems>9999</maxitems>
                            <renderMode>tree</renderMode>
                            <size>10</size>
                            <treeConfig>
                                <appearance>
                                    <expandAll>1</expandAll>
                                    <showHeader>1</showHeader>
                                </appearance>
                                <parentField>pid</parentField>
                            </treeConfig>
                          </config>
                        </TCEforms>					
					</kontakt>					
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>				