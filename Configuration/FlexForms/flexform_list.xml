<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
				<sheetTitle>Institution</sheetTitle>
                <type>array</type>
                <el>
					<settings.ansicht>
						<exclude>1</exclude>						
						<label>Ansicht</label>
						<onChange>reload</onChange>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<numIndex index="0">Liste</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
								<numIndex index="1">
									<numIndex index="0">Karte</numIndex>
									<numIndex index="1">2</numIndex>
								</numIndex>
								<numIndex index="2">
									<numIndex index="0">Liste + Karte</numIndex>
									<numIndex index="1">3</numIndex>
								</numIndex>									
							</items>
						</config>
					</settings.ansicht>
					<settings.kartehoehe>
							<exclude>1</exclude>						
							<label>Höhe der Karte</label>							
							<config>
								<type>input</type>
								<size>5</size>
								<eval>trim,int</eval>
								<range>
									<lower>500</lower>
									<upper>1000</upper>
								</range>
								<slider>
									<step>50</step>
									<width>200</width>
								</slider>
								<default>700</default>
							</config>
					</settings.kartehoehe>					
					<settings.kartezoom>
							<exclude>1</exclude>						
							<label>Zoomfaktor der Karte</label>							
							<config>
								<type>input</type>
								<size>5</size>
								<eval>trim,int</eval>
								<range>
									<lower>1</lower>
									<upper>15</upper>
								</range>
								<slider>
									<step>1</step>
									<width>200</width>
								</slider>
								<default>7</default>
							</config>
					</settings.kartezoom>
					<settings.ueberschrift>
						<exclude>1</exclude>						
						<label>Überschrift einblenden</label>							
                         <config>
							<type>check</type>
                            <default>0</default>
						</config>
					</settings.ueberschrift>					
					<settings.bezirke>
						<exclude>1</exclude>
						<label>MB-Bezirke</label>
						<config>
							<type>select</type>
							<renderType>selectMultipleSideBySide</renderType>
							<autoSizeMax>50</autoSizeMax>
							<foreign_table>tx_bfbn_domain_model_mbbezirk</foreign_table>
							<maxitems>3</maxitems>
							<size>10</size> 
						</config>
                    </settings.bezirke>
                    <settings.ausbildungsrichtungen>
                        <exclude>1</exclude>
                        <label>Ausbildungsrichtungen</label>
                        <config>
							<type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>tx_bfbn_domain_model_institutionausbildungsrichtung</foreign_table>
                            <maxitems>33</maxitems>
                            <size>10</size> 
                        </config>
                    </settings.ausbildungsrichtungen>
                    <settings.sprachen>
						<exclude>1</exclude>
						<label>Sprachen</label>
						<config>
							<type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>tx_bfbn_domain_model_institutionsprache</foreign_table>
                            <maxitems>10</maxitems>
                            <size>10</size> 
						</config>
                    </settings.sprachen>
                    <settings.inklusion>
						<exclude>1</exclude>
						<label>Profil-Inklusion</label>
						<config>
							<type>check</type>
                            <default>0</default>
						</config>
                    </settings.inklusion>
                    <settings.ivk>
						<exclude>1</exclude>
						<label>Integrationsvorklasse</label>
						<config>
							<type>check</type>
                            <default>0</default>
						</config>
                    </settings.ivk>
					<settings.startingpoint>
						<exclude>1</exclude>
						<label>Datensatzsammlung</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>3</size>
							<maxitems>50</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
								</suggest>
							</wizards>
						</config>
					</settings.startingpoint>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>