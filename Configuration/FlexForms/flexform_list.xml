<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Institution</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
					<settings.ansicht>
						<TCEforms>
							<exclude>1</exclude>						
							<label>Ansicht</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0">
										<numIndex index="0">Liste</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Karte</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Liste + Karte</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>									
								</items>
							</config>
						</TCEforms>
					</settings.ansicht>
					<settings.kartezoom>
						<TCEforms>
							<exclude>1</exclude>						
							<label>Zoomfaktor der Karte</label>							
							<config>
								<type>input</type>
								<size>5</size>
								<eval>trim,int</eval>
								<range>
									<lower>1</lower>
									<upper>15</upper>
								</range>
								<slider>
									<step>1</step>
									<width>200</width>
								</slider>
								<default>7</default>
							</config>
						</TCEforms>
					</settings.kartezoom>
					<settings.ueberschrift>
						<TCEforms>
							<exclude>1</exclude>						
							<label>Ãœberschrift einblenden</label>							
                         <config>
							<type>check</type>
                            <default>0</default>
                          </config>
						</TCEforms>
					</settings.ueberschrift>					
					<settings.bezirke>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>MB-Bezirke</label>
                          <config>
							<type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>tx_bfbn_domain_model_mbbezirk</foreign_table>
                            <maxitems>3</maxitems>
                            <size>10</size> 
                          </config>
                        </TCEforms>
                    </settings.bezirke>
                    <settings.ausbildungsrichtungen>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>Ausbildungsrichtungen</label>
                         <config>
							<type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>tx_bfbn_domain_model_institutionausbildungsrichtung</foreign_table>
                            <maxitems>33</maxitems>
                            <size>10</size> 
                          </config>
                        </TCEforms>
                    </settings.ausbildungsrichtungen>
                    <settings.sprachen>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>Sprachen</label>
                         <config>
							<type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>tx_bfbn_domain_model_institutionsprache</foreign_table>
                            <maxitems>10</maxitems>
                            <size>10</size> 
                          </config>
                        </TCEforms>
                    </settings.sprachen>
                    <settings.inklusion>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>Profil-Inklusion</label>
                         <config>
							<type>check</type>
                            <default>0</default>
                          </config>
                        </TCEforms>
                    </settings.inklusion>
                    <settings.ivk>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>Integrationsvorklasse</label>
                         <config>
							<type>check</type>
                            <default>0</default>
                          </config>
                        </TCEforms>
                    </settings.ivk>					
                    <settings.categories>
                        <TCEforms>
                          <exclude>1</exclude>
                          <label>Kategorien</label>
                          <config>
							<type>select</type>
                            <renderType>selectTree</renderType>
                            <autoSizeMax>50</autoSizeMax>
                            <foreign_table>sys_category</foreign_table>
                            <foreign_table_where> AND sys_category.sys_language_uid IN (-1, 0) ORDER BY sys_category.title ASC</foreign_table_where>
                            <maxitems>9999</maxitems>
                            <renderMode>tree</renderMode>
                            <size>10</size>
                            <treeConfig>
                                <appearance>
                                    <expandAll>1</expandAll>
                                    <showHeader>1</showHeader>
                                </appearance>
                                <parentField>parent</parentField>
                            </treeConfig>
                          </config>
                        </TCEforms>
                    </settings.categories>
					<settings.startingpoint>
						<TCEforms>
							<exclude>1</exclude>
							<label>Datensatzsammlung</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
								<suggest>
									<type>suggest</type>
								</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.startingpoint>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>